= form_for @bar, :validate => true do |f|
  -if @bar.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bar.errors.count, "error")} prohibited this bar from being saved:"
      %ul
        - @bar.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :owner
    = f.text_field :owner
  .field
    = f.label :phone
    = f.number_field :phone
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save', :class => "btn btn-primary"
